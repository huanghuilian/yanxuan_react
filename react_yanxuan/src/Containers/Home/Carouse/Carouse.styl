@import "../../../assets/stylus/mixins.styl"
/*首页滑屏区*/
  .banner
    width 100%
    position relative
    padding-to (200/$unit)!important
    margin-bottom (10/$unit)
    box-sizing border-box
    .slideWrap
      width 100%
      height (300/$unit)
      overflow hidden
      font-size 0
    .swiper-pagination
      position absolute
      top (260/$unit)
      left 50%
      margin-left -32px
      span
        margin-left 2px
    .list
      clearFix()
      white-space nowrap
      height 100%
      .item
        //display inline-block
        float left
        width 10rem
        height 100%
        img
          width 10rem
          height 100%

    .m-indexServicePolicy
      height (36/$unit)
      background-color #fff
      padding 0 (15/$unit)
      .serverList
        display flex
        white-space nowrap
        height 100%
      .item
        flex 1
        height 100%
        float left
        line-height (36/$unit)
        i
          color #B4282D
          margin-right (2/$unit)
          font-size (12/$unit)
        span
          display inline
          font-size (12/$unit)