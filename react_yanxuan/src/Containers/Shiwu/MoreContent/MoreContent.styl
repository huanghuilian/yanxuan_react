  @import "../../../assets/stylus/mixins.styl"
  .moreInfo
    width 100%
    position relative
    padding 0 (15/$unit)
    margin-bottom (50/$unit)
    .moreInner
      display block
      .hd
        height (30/$unit)
        text-align center
        font-size (18/$unit)
        text-align center
        .title
          position relative
          margin (28/$unit) auto
          box-sizing border-box
          width 100%
          height 100%
          &:before
            position absolute
            top 0.211rem
            left 0.1rem
            z-index 2
            content: ''
            height (1/$unit)
            width (132/$unit)
            background-color #B5B5B5
          &:after
            position absolute
            top 0.211rem
            right 0.1rem
            z-index 2
            content: ''
            height (1/$unit)
            width (132/$unit)
            background-color #b5b5b5
      .content
        width 100%
        height (250/$unit)
        a
          display block
          padding 0.32rem
          margin 0.4rem 0
          color #333333
          background-color #fff
          .item
            display block
            width 8.56rem
            height 4.8rem
            background-color #f4f4f4
            .pics
              height 100%
              .left_pic
                width (250/$unit)
                height 4.8rem
                float left
              .pic_right
                float right
                height 100%
                img
                  display flex
                  flex-direction column
                  width (70/$unit)
                  height 50%
            .desc
              width 9.2rem
              height (50/$unit)
              margin-left -(12/$unit)
              line-height 1.2
              background-color #fff
              font-size (12/$unit)
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
              padding (16/$unit) 0 (25/$unit) (15/$unit)
              text-align left
              margin-bottom (20/$unit)
            img
              width 8.56rem
              height 4.8rem