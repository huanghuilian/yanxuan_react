  @import '../../assets/stylus/mixins.styl'
  #shiwu
    position relative
    top 0
    left 0
    height 100%
    width 10rem
    background-color #fff
    .LOOK
      position relative
      .lookInner
        background #fff
        text-align center
        .hd
          font-size (18/$unit)
          height 1.6rem
          line-height 1.6rem
        .content
          display block
          color #333333
          position relative
          height (338/$unit)
          img
            width 10rem
            height (268/$unit)
          .topicInfo
            width 10rem
            padding (12/$unit) (15/$unit) (25/$unit)
            height 0.64rem
            line-height 0.64rem
            font-size (12/$unit)
            .avatar
              float left
              margin-right (4/$unit)
              img
                width (28/$unit)
                height (28/$unit)
                border-radius 50%
              .name
                display inline-block
                font-size (12/$unit)
                color #333333
                white-space nowrap
                overflow hidden
                text-overflow ellipsis

